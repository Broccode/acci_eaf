{
  "name": "acci-eaf-monorepo",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "nx build",
    "test": "nx test",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint --all --fix",
    "format": "npm run format:all",
    "format:check": "npm run format:check:all",
    "format:all": "npm run format:nx && npm run format:prettier",
    "format:check:all": "npm run format:check:nx && npm run format:check:prettier",
    "format:nx": "nx format:write",
    "format:check:nx": "nx format:check",
    "format:prettier": "prettier --write .",
    "format:check:prettier": "prettier --check .",
    "format:ci": "npm run format:check:all",
    "format:local": "./scripts/format-local.sh",
    "format:fix": "./scripts/format-fix.sh",
    "ci:debug": "./scripts/ci-debug.sh",
    "ci:local": "npm run ci:debug",
    "precommit": "npm run format:check:all && npm run lint",
    "prepare": "husky"
  },
  "private": true,
  "devDependencies": {
    "@nx/eslint": "21.1.2",
    "@nx/eslint-plugin": "21.1.2",
    "@nx/gradle": "21.1.2",
    "@nx/jest": "21.1.2",
    "@nx/js": "21.1.2",
    "@nx/react": "21.1.2",
    "@nx/storybook": "^21.2.0",
    "@nx/vite": "21.1.2",
    "@nx/web": "21.1.2",
    "@nx/workspace": "21.1.2",
    "@storybook/addon-a11y": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.1.2",
    "nx": "21.1.2",
    "postcss": "^8.5.5",
    "prettier": "^3.2.5",
    "tailwindcss": "^4.1.10",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.2"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "dependencies": {
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/components": "^8.6.14",
    "@storybook/manager-api": "^8.6.14",
    "@storybook/theming": "^8.6.14",
    "storybook": "^8.6.14"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md,html}": [
      "prettier --write"
    ],
    "*.{yml,yaml}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ]
  }
}
